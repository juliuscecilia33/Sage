generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
}

model Profile {
  id        String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String  @unique @db.Uuid // User ID from Supabase auth.users
  fullName  String?
  bio       String?
  age       Int?    // Example of an integer field
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  // Relation to posts and Theme
  sideNotesBook SideNotesBook[]
  sideNotesChapter SideNotesChapter[]
  theme Theme[]
}

model Theme {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId      String   @db.Uuid // User ID from Supabase auth.users
  name        String
  description String?        
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  notesCount  Int     @default(0)
  workspaceId String? @db.Uuid
  themeColor  String

  user Profile @relation(fields: [userId], references: [userId])

  @@index([userId])
}

model SideNotesBook {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId      String   @db.Uuid // User ID from Supabase auth.users
  title       String
  description String?
  book        String
  verse       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userTheme   String?
  isPrivate   Boolean @default(true)
  workspaceId String? @db.Uuid

  user Profile @relation(fields: [userId], references: [userId])

  @@index([userId])
}

model SideNotesChapter {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId      String   @db.Uuid // User ID from Supabase auth.users
  title       String
  description String?
  book        String
  chapter     Int
  verse       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userTheme   String?
  isPrivate   Boolean @default(true)
  workspaceId String? @db.Uuid

  user Profile @relation(fields: [userId], references: [userId])

  @@index([userId])
}