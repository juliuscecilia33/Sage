generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
}

model Profile {
  id        String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String  @unique @db.Uuid // User ID from Supabase auth.users
  fullName  String?
  bio       String?
  age       Int?    // Example of an integer field
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  // Relation to posts
  sideNotes SideNotes[]
}

model SideNotes {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId      String   @db.Uuid // User ID from Supabase auth.users
  title       String
  description String?
  book        String
  chapter     Int
  verse       Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user Profile @relation(fields: [userId], references: [userId])

  @@index([userId])
}